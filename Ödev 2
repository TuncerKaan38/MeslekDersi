#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

char harf;
int i = 0;
int j=0;
char bosluk = ' ';

int main()
{
    printf("Bir sayi girin:");
    scanf("%c", &harf);

    while(1){

        while(30 > i){
            for(j=0;i>j;j++){
                printf("%c",bosluk);
            }
            printf("%c\n",harf);
            i = i + 1;
            Sleep(10);
        }

        while(i > 0){
            for(j=0;i>j;j++){
                printf("%c",bosluk);
            }
            printf("%c\n",harf);
            i = i - 1;
            Sleep(10);
        }
    }



    return 0;
}
